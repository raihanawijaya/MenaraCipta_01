<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/lay_item_a"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_for_item_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="4dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/tv_column_1"
                    android:textSize="@dimen/_30sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Article"/>

                <TextView
                    android:id="@+id/tv_column_2"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LEONY"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_24sdp">

                    <TextView
                        android:id="@+id/tv_column_3"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="RED"/>

                    <TextView
                        android:id="@+id/tv_column_4"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:text="145,000"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_24sdp">

                    <TextView
                        android:id="@+id/tv_column_5"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="RED"/>

                    <TextView
                        android:id="@+id/tv_column_6"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:text="145,000"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_24sdp">

                    <TextView
                        android:id="@+id/tv_column_7"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="RED"/>

                    <TextView
                        android:id="@+id/tv_column_8"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:text="145,000"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_24sdp">

                    <TextView
                        android:id="@+id/tv_column_9"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="RED"/>

                    <TextView
                        android:id="@+id/tv_column_10"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:text="145,000"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_width="160dp"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/iv_new_arrival"
                    android:src="@drawable/ic_fiber_new_black_24dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>

                <ImageView
                    android:id="@+id/iv_bag_image"
                    android:src="@drawable/ic_note_add"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


    </LinearLayout>


</LinearLayout>