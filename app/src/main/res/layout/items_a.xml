<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin = "@dimen/_2sdp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_layout_white_02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="@dimen/_400sdp"
                   android:layout_height="@dimen/_24sdp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_marginTop="@dimen/_1sdp"
                       android:layout_gravity="center_vertical"
                       android:gravity="center_vertical"
                       android:id="@+id/tv_column_1"
                       android:textSize="@dimen/_18sdp"
                       android:textColor="@color/colorWhite"
                       android:layout_width="@dimen/_120sdp"
                       android:layout_height="match_parent"
                       android:text="Article"/>

                   <Button
                       android:id="@+id/btn_pilih"
                       android:layout_gravity="center"
                       android:textSize="@dimen/_6sdp"
                       android:layout_width="@dimen/_80sdp"
                       android:layout_height="wrap_content"
                       android:text="Pilih Mesin Ini"/>

               </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp">


                     <TextView
                      android:id="@+id/tv_column_2"
                      android:gravity="center_vertical"
                      android:textAlignment="textStart"
                      android:textSize="@dimen/_16sdp"
                      android:textColor="@color/colorWhite"
                      android:layout_width="@dimen/_110sdp"
                      android:layout_height="match_parent"
                      android:text="145,000" tools:ignore="RtlCompat"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>






    </LinearLayout>


</LinearLayout>