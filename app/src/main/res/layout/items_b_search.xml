<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_item_b_search"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0.5dp"
    android:background="@color/bg_item_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_item">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_unique_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-06-01"
                android:textColor="@color/font_item"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="41,673,550"
                android:textAlignment="textEnd"
                android:textColor="@color/font_item" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="71"
                android:textAlignment="textEnd"
                android:textColor="@color/font_item" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trx_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20,605,298"
                android:textAlignment="textEnd"
                android:textColor="@color/font_item"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>