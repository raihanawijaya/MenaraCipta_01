<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_item_a_detail"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:background="@color/colorBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="8dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-06-01"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="71"/>

            <TextView
                android:id="@+id/tv_disc_pct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="50"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_gross_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="41,673,550"/>

            <TextView
                android:id="@+id/tv_disc_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="21,068,252"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_net_amt"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="20,605,298"/>

            <TextView
                android:id="@+id/tv_avg_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="290,215"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>