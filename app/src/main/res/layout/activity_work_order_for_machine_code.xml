<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".SearchArticleActivity">

    <include layout="@layout/custom_toolbar" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_margin="@dimen/_2sdp"
       android:orientation="vertical"
       android:background="@drawable/bg_layout_white_06"
       android:layout_height="wrap_content">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:layout_height="@dimen/_20sdp"
        android:weightSum="2"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_machine_code"
            android:background="@drawable/bg_layout_print_02"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingLeft="@dimen/_3sdp"
            android:text="FLEXO 1"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorWhite"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="match_parent"
            tools:ignore="RtlCompat" />



    </LinearLayout>



   </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/items_work_order_for_machine_code">
        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>