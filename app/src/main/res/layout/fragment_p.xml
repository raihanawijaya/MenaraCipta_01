<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:padding="@dimen/_4sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_informasi_resto"
            android:textSize="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_for_item_4"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="   >>> Informasi Restoran ..."
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:id="@+id/tv_List_Category_Menu"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/bg_for_item_4"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="   >>> List Category Dan Menu ..."
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:id="@+id/tv_daftar_meja"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/bg_for_item_4"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="   >>> Daftar Meja Restoran"
            android:layout_height="@dimen/_30sdp"/>

    </LinearLayout>



</LinearLayout>