<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".SearchArticleActivity">

    <include layout="@layout/custom_toolbar" />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_margin="@dimen/_2sdp"
       android:orientation="vertical"
       android:background="@drawable/bg_layout_white_03"
       android:layout_height="@dimen/_24sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_margin="@dimen/_2sdp"
               android:layout_height="match_parent"
               android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_margin="@dimen/_1sdp"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <TextView
                   android:gravity="center"
                   android:paddingLeft="@dimen/_2sdp"
                   android:text="Machince :"
                   android:textColor="@color/colorGray"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_8sdp"
                   android:layout_width="@dimen/_45sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
                   android:id="@+id/tv_machine_code"
                   android:layout_gravity="center_vertical"
                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_6sdp"
                   android:text="FLEXO 1"
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorBlack"
                   android:layout_width="@dimen/_60sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />


               <TextView
                 android:gravity="center"
                 android:paddingLeft="@dimen/_2sdp"
                 android:text="WO :"
                 android:textColor="@color/colorGray"
                 android:textAlignment="textStart"
                 android:textSize="@dimen/_8sdp"
                 android:layout_width="@dimen/_20sdp"
                 android:layout_height="match_parent"
                 tools:ignore="RtlCompat" />

               <TextView
                   android:id="@+id/tv_wo_no"
                   android:layout_gravity="center_vertical"
                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_6sdp"
                   android:text="0001/MC/06/20"
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorBlack"
                   android:layout_width="@dimen/_70sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView

                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_8sdp"
                   android:text="Proc#"
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorGray"
                   android:layout_width="@dimen/_40sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
                   android:id="@+id/tv_proc_no"
                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_8sdp"
                   android:text=""
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorBlack"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
                   android:id="@+id/tv_proc_notes"
                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_8sdp"
                   android:text=""
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorBlack"
                   android:layout_width="@dimen/_60sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
                   android:gravity="center"
                   android:paddingLeft="@dimen/_2sdp"
                   android:text="LotId"
                   android:textColor="@color/colorGray"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_8sdp"
                   android:layout_width="@dimen/_30sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
                   android:id="@+id/tv_lot_id"
                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_6sdp"
                   android:text= ""
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorBlack"
                   android:layout_width="@dimen/_70sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

             </LinearLayout>

           </LinearLayout>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="@dimen/_180sdp">

       <LinearLayout
            android:layout_width="@dimen/_400sdp"
            android:layout_margin="@dimen/_2sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_layout_white_01"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_job_name"
                    android:gravity="center"
                    android:background="@drawable/bg_layout_print_02"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="Trouble"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_20sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Problem : "
                    android:textColor="@color/colorGray"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_24sdp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/et_problem_notes"
                    android:focusable="false"
                    android:paddingLeft="@dimen/_2sdp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_24sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:gravity="center"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="Ket : "
                    android:textColor="@color/colorGray"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_24sdp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/et_keterangan"
                    android:paddingLeft="@dimen/_2sdp"
                    android:gravity="center"
                    android:text=""
                    android:hint="Keterangan"
                    android:textColor="@color/colorBlack"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_24sdp"
                    tools:ignore="RtlCompat" />
                <Button
                    android:id="@+id/btn_catat_hambatan"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catat !"/>

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_margin="@dimen/_2sdp"
               android:layout_height="wrap_content"
               android:weightSum="2"
               android:orientation="horizontal">

               <CheckBox
                   android:gravity="center"
                   android:paddingLeft="@dimen/_5sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:text="Report To Divisi "
                   android:textColor="@color/colorGray"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_8sdp"
                   android:layout_width="@dimen/_75sdp"
                   android:layout_height="@dimen/_24sdp"
                   tools:ignore="RtlCompat" />



           </LinearLayout>

        </LinearLayout>

           <LinearLayout
               android:layout_width="@dimen/_80sdp"
               android:layout_margin="@dimen/_1sdp"
               android:layout_height="@dimen/_180sdp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_margin="@dimen/_2sdp"
                   android:layout_height="@dimen/_160sdp"
                   android:background="@drawable/bg_layout_white_01"
                   android:orientation="horizontal">

                   <android.support.v4.widget.SwipeRefreshLayout
                       android:id="@+id/swipe"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <android.support.v7.widget.RecyclerView
                           android:id="@+id/rv_detail"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           tools:listitem="@layout/items_work_order_process_lotid_print_job">

                       </android.support.v7.widget.RecyclerView>

                   </android.support.v4.widget.SwipeRefreshLayout>

               </LinearLayout>

           </LinearLayout>

    </LinearLayout>


</LinearLayout>