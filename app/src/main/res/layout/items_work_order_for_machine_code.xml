<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_margin="@dimen/_2sdp"
       android:background="@drawable/bg_layout_white_01"
       android:orientation="horizontal"
       android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="@dimen/_420sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <LinearLayout
                    android:layout_width="@dimen/_420sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="WO :"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tv_column_1"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="0001/MC/05/20"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="Type :"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tv_column_3"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/_4sdp"
                        android:text="PERUBAHAN"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="Qty : "
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tv_column_4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="145,000"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="Uk.Lbl :"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tv_column_7"
                        android:layout_width="@dimen/_85sdp"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="50X124"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="RtlCompat" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp">


            <LinearLayout
                android:layout_width="@dimen/_420sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Cetakan :"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_8sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tv_column_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="PLM"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Artwork :"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_8sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tv_column_5"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="ARTWORK"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_8sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Tgl Kirim :"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_8sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tv_column_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="24-Jul-20"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_8sdp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_arah_gulungan"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp">
        </ImageView>

        <Button
            android:id="@+id/btn_next"
            android:layout_gravity="center"
            android:textSize="@dimen/_6sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:text="Pilih Wo"/>

    </LinearLayout>


   </LinearLayout>

</LinearLayout>
