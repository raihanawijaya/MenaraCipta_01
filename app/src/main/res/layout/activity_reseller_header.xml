<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:padding="5dp"
    tools:context=".OrderHeaderActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Status "
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/et_status_desc"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="MKT Code "
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/tv_user_code"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="65dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/bg_for_item_red"
                android:text="Non Active !"
                android:textColor="#FFF"
                android:textSize="8sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="No Reseller"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/tv_reseller_code"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Password"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/et_reseller_pass"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Join Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/tv_trx_date"
                    android:textSize="@dimen/_12sdp"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Total Qty Order"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/tv_qty_order"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Total Rp Order"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/tv_rp_order"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Reseller Name :"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/et_cust_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cust_transfer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Reseller Bank Account Name : >>"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/et_cust_transfer_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/monmed"
                android:text="Reseller Hp :"
                android:textColor="@color/colorBlack"
                android:textSize="8sp" />

            <EditText
                android:id="@+id/et_cust_hp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_input_edit"
                android:fontFamily="@font/monreg"
                android:inputType="phone"
                android:lines="1"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="12dp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:focusable="false"
                android:fontFamily="@font/monmed"
                android:text="Reseller Address :"
                android:textColor="@color/colorBlack"
                android:textSize="8sp" />

            <EditText
                android:id="@+id/et_cust_address"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bg_input_edit"
                android:fontFamily="@font/monreg"
                android:textSize="@dimen/_10sdp"
                android:inputType="textMultiLine"
                android:gravity="left"
                android:paddingLeft="11dp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_for_item_1"
            android:fontFamily="@font/monsemibold"
            android:text="Save"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_paid"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_btn_blue_primary"
            android:fontFamily="@font/monsemibold"
            android:text="PAID ?"
            android:textColor="#FFF"
            android:textSize="10sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>