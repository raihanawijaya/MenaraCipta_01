<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".SearchArticleActivity">

    <include layout="@layout/custom_toolbar" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_margin="@dimen/_2sdp"
       android:orientation="vertical"
       android:background="@drawable/bg_layout_white_01"
       android:layout_height="@dimen/_38sdp">

       <LinearLayout
        android:layout_width="@dimen/_420sdp"
        android:layout_margin="@dimen/_1sdp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="@dimen/_420sdp"
           android:layout_margin="@dimen/_2sdp"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_margin="@dimen/_1sdp"
               android:layout_height="@dimen/_16sdp"
               android:orientation="horizontal">

               <TextView
                   android:gravity="center"
                   android:paddingLeft="@dimen/_2sdp"
                   android:text="Machine :"
                   android:textColor="@color/colorGray"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_8sdp"
                   android:layout_width="@dimen/_45sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
                   android:id="@+id/tv_machine_code"
                   android:gravity="center"
                   android:textAlignment="textStart"
                   android:paddingLeft="@dimen/_6sdp"
                   android:text="0001/MC/06/20"
                   android:textSize="@dimen/_8sdp"
                   android:textColor="@color/colorBlack"
                   android:layout_width="@dimen/_65sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />

               <TextView
             android:gravity="center"
             android:paddingLeft="@dimen/_2sdp"
             android:text="WO :"
             android:textColor="@color/colorGray"
             android:textAlignment="textStart"
             android:textSize="@dimen/_8sdp"
             android:layout_width="@dimen/_25sdp"
             android:layout_height="match_parent"
             tools:ignore="RtlCompat" />

            <TextView
            android:id="@+id/tv_wo_no"
            android:gravity="center"
            android:textAlignment="textStart"
            android:paddingLeft="@dimen/_6sdp"
            android:text="0001/MC/06/20"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorBlack"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="match_parent"
            tools:ignore="RtlCompat" />


           <TextView
           android:gravity="center"
           android:paddingLeft="@dimen/_2sdp"
           android:text="Proc#"
           android:textColor="@color/colorGray"
           android:textAlignment="textStart"
           android:textSize="@dimen/_8sdp"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="match_parent"
           tools:ignore="RtlCompat" />

           <TextView
           android:id="@+id/tv_proc_no"
           android:gravity="center"
           android:textAlignment="textStart"
           android:paddingLeft="@dimen/_8sdp"
           android:text=""
           android:textSize="@dimen/_8sdp"
           android:textColor="@color/colorBlack"
           android:layout_width="@dimen/_20sdp"
           android:layout_height="match_parent"
           tools:ignore="RtlCompat" />

           <TextView
             android:id="@+id/tv_proc_notes"
             android:gravity="center"
             android:layout_marginLeft="@dimen/_10sdp"
             android:text="Cetak"
             android:textColor="@color/colorBlack"
             android:textAlignment="textStart"
             android:textSize="@dimen/_8sdp"
             android:layout_width="@dimen/_45sdp"
             android:layout_height="match_parent"
             tools:ignore="RtlCompat" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:gravity="center_vertical"
               android:layout_gravity="center_vertical"
               android:layout_margin="@dimen/_1sdp"
               android:layout_height="@dimen/_16sdp"
               android:orientation="horizontal">

               <TextView
                   android:gravity="center"
                   android:paddingLeft="@dimen/_2sdp"
                   android:text="Cetakan :"
                   android:textColor="@color/colorGray"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_8sdp"
                   android:layout_width="@dimen/_45sdp"
                   android:layout_height="match_parent"
                   tools:ignore="RtlCompat" />
               <TextView
                   android:id="@+id/tv_produk_name"
                   android:gravity="center_vertical"
                   android:paddingLeft="@dimen/_6sdp"
                   android:textColor="@color/colorBlack"
                   android:text="MADU TJ super"
                   android:textSize="@dimen/_8sdp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>

           </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="@dimen/_80sdp"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_2sdp"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iv_arah_gulungan"
                   android:layout_width="@dimen/_50sdp"
                   android:layout_height="@dimen/_30sdp" />

           </LinearLayout>

       </LinearLayout>



   </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:orientation="vertical"
        android:background="@drawable/bg_layout_white_01"
        android:layout_height="@dimen/_24sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:paddingLeft="@dimen/_4sdp"
                android:text="LotId :"
                android:textColor="@color/colorGray"
                android:textAlignment="textStart"
                android:textSize="@dimen/_8sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                tools:ignore="RtlCompat" />


            <EditText
                android:id="@+id/et_lot_id"
                android:inputType="textPersonName"
                android:digits= "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-!@#$%^*() "
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_60sdp"
                android:background="@null"
                android:layout_height="match_parent"/>


            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Jml(m) :"
                android:textColor="@color/colorGray"
                android:textAlignment="textStart"
                android:textSize="@dimen/_8sdp"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/et_lot_id_mtr"
                android:paddingLeft="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="number"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                tools:ignore="RtlCompat" />
            <Button
                android:id="@+id/btn_delete_lot_id"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_7sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_update"
                android:text="UBAH"/>
            <Button
                android:id="@+id/btn_insert_lot_id"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_7sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_save"
                android:text="Tambah"/>
            <Button
                android:id="@+id/btn_proses_print_lot_id"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_80sdp"
                android:drawableLeft="@drawable/ic_update"
                android:layout_height="match_parent"
                android:text="Proses"/>

        </LinearLayout>



    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/items_work_order_process_lotid"></android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>