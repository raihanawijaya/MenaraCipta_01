<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0.5dp"
    android:paddingBottom="0.5dp"
    android:background="@color/colorGray">

   <LinearLayout
        android:id="@+id/lay_item_b_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBrown5">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:background="@color/colorBrown5">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="2dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/tv_column_1"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ARTICLE"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_column_2"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_column_3"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="569,900"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_width="88dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_column_4"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="20,605,298" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_column_5"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorBrown5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lorem ipsum" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_6"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:background="@color/colorBrown5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="owl gantung  ceria " />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:background="@color/colorBrown5"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_8"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@color/colorBrown5"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:text="Ordered" />
        <TextView
            android:id="@+id/tv_column_7"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="@color/colorBrown5"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:text="1" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>