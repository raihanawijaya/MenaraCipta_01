<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".BDetailActivity">

    <include layout="@layout/custom_toolbar_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="30dp"
        android:paddingLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Cust :"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cust_name"
            android:paddingLeft="@dimen/_4sdp"
            android:focusable="false"
            android:hint="Customer Name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:inputType="text"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/et_trx_date"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:gravity="center"
            android:text="14 JUN 2018"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="30dp"
        android:paddingLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Resi No :"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_resi_no"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="false"
            android:gravity="left"
            android:hint="Resi No"
            android:paddingLeft="@dimen/_4sdp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Nik :"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_nik_code"
            android:hint="Nik Code"
            android:paddingLeft="@dimen/_4sdp"
            android:focusable="false"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />


       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
         android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Kirim ke :"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cust_address"
            android:focusable="false"

            android:paddingLeft="@dimen/_4sdp"
             android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:singleLine="false"
            android:hint="Alamat Pengiriman Barang"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_4sdp"
         android:paddingLeft="8dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_ongkir"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Ong"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/tv_article"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_layout_white_01"
            android:gravity="center"
            android:focusable="false"
            android:text="M001"
            android:textColor="@color/colorBlack"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/tv_description"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_layout_white_01"
            android:gravity="center"
            android:focusable="false"
            android:text="GADGET"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:gravity="center"
            android:text="Rp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_layout_white_01"
            android:gravity="center"
            android:text="10,000"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Qty"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_qty"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_layout_white_01"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:inputType="number"
            android:textSize="12sp"
            android:text="" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Note"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_notes"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_layout_white_01"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:hint="Tulis Keterangan"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <Button
            android:id="@+id/btn_delete_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="12dp"
            android:layout_weight="1"
            android:text="CANCEL"/>

        <Button
            android:id="@+id/btn_save_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="12dp"
            android:layout_weight="1"
            android:text="SUBMIT"/>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:background="@color/colorAzure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_b_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/items_b_detail">
        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>