<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_layout_white_01">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_column_1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:text="BKS 6"
                    android:textColor="@color/font_item" />

                <TextView
                    android:id="@+id/tv_column_2"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="OPEN"
                    android:textColor="@color/font_item"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_column_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLM-010720-002"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/font_item" />
                <TextView
                    android:id="@+id/tv_column_4"
                    android:layout_width="@dimen/_75sdp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="1,957,660"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/font_item"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>