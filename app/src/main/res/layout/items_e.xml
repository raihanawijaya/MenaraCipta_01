<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="1dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp">

                    <TextView
                        android:id="@+id/tv_column_1"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center_vertical"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="PLM"
                        tools:ignore="RtlCompat" />


                        <TextView
                        android:id="@+id/tv_column_3"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_10sdp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:text="PLM"
                        tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/tv_column_4"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="145,000"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="RtlCompat" />

                        <TextView
                             android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorGray"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:text="Uk.Label : "
                            tools:ignore="RtlCompat"/>


                        <TextView
                            android:id="@+id/tv_column_7"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="50X124"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="RtlCompat" />


                        <ImageView
                            android:id="@+id/iv_arah_gulungan"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"/>

                    </LinearLayout>

             </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_22sdp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0dp"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_22sdp">
                    <TextView
                        android:id="@+id/tv_column_2"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center_vertical"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="wrap_content"
                        android:text="PLM"
                        tools:ignore="RtlCompat" />


                </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorGray"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="wrap_content"
                    android:text="Artwork :"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tv_column_5"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="ARTWORK"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorGray"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="wrap_content"
                    android:text="Tgl Kirim :"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tv_column_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="24-Jul-20"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


        </LinearLayout>

       </LinearLayout>


</LinearLayout>