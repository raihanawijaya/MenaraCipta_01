<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:padding="5dp"
    tools:context=".OrderHeaderActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Status "
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_status_desc"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="65dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/bg_for_item_red"
                android:fontFamily="@font/monsemibold"
                android:text="cancel"
                android:textColor="#FFF"
                android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_packed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_for_item_4"
                    android:fontFamily="@font/monsemibold"
                    android:text="Proses"
                    android:textColor="@color/colorWhite"
                    android:textSize="8sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="65dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_delivery"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_for_item_2"
                    android:fontFamily="@font/monsemibold"
                    android:text="Kirim"
                    android:textColor="@color/colorWhite"
                    android:textSize="8sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="TrxNo"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tv_trx_no"
                    android:textSize="@dimen/_12sdp"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="MK Code"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tv_user_code"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Tanggal"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tv_trx_date"
                    android:textSize="@dimen/_12sdp"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Qty"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/tv_qty_order"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Rp Order"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/tv_rp_order"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Resi#"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/tv_resi_no"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Nik Code"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/tv_nik_code"
                    android:hint="Tap To Add Nik"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Nik Name :"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/tv_nik_name"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/monmed"
                    android:text="Cust Name "
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_cust_name"
                    android:hint="Customer Name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cust_transfer_name"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/monmed"
                    android:text="Trf Name"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_cust_transfer_name"
                    android:hint="Transfer By Name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_input_edit"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Bank Name"
                    android:textColor="@color/colorBlue"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/et_bank_name"
                    android:hint="Tap To Add Bank"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/monmed"
                    android:text="Nominal Trf :"
                    android:textColor="@color/colorBlue"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/et_nominal_trf"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bg_for_item_1"
                    android:fontFamily="@font/monreg"
                    android:inputType="textCapCharacters"
                    android:lines="1"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:fontFamily="@font/monmed"
                android:text="Cust Hp :"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_cust_hp"
                android:hint="Customer Mobile Phone"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="30dp"
                android:background="@drawable/bg_input_edit"
                android:fontFamily="@font/monreg"
                android:inputType="phone"
                android:lines="1"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="12dp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:focusable="false"
                android:fontFamily="@font/monmed"
                android:text="Delivery Address / Alamat Pengiriman :"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_cust_address"
                android:hint="Customer Delivery Address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_input_edit"
                android:fontFamily="@font/monreg"
                android:textSize="@dimen/_10sdp"
                android:inputType="textMultiLine"
                android:gravity="left"
                android:paddingLeft="11dp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
            android:id="@+id/btn_save"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_for_item_1"
            android:fontFamily="@font/monsemibold"
            android:text="Save"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_paid"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_btn_blue_primary"
            android:fontFamily="@font/monsemibold"
            android:text="PAID ?"
            android:textColor="#FFF"
            android:textSize="14sp" />


    </LinearLayout>

    </LinearLayout>

</ScrollView>